@model ProjetAsp2.Models.RentCar

@{
    ViewData["Title"] = "Create";

}

<header data-background="img/header/6.jpg" class="intro introhalf">
    <!-- Intro Header-->
    <div class="intro-body">
        <h2 class="classic">Hello in </h2>
        <h1 class="classic">Allo karhba</h1>
        <h2 class="classic">Reserve now </h2>
    </div>
</header>



<!-- Contact Section-->
<section id="contact">
    <div class="container text-center">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h3>Reserve Now</h3>
                <p>Rentals are easier, faster and more advantageous. Reserve now to take advantage of special member offers, skip the line, and get an additional free driver.</p>


                <form enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="FullName" class="sr-only control-label">You Name</label>
                            <input asp-for="FullName" class="form-control input-lg" placeholder="You Name" required="" data-validation-required-message="Please enter name">
                            <span asp-validation-for="FullName" class="help-block text-danger"></span>
                        </div>
                    </div>


                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="Adresse" class="sr-only control-label">You Adresse</label>
                            <input asp-for="Adresse" class="form-control input-lg" placeholder="You Adresse" required="" data-validation-required-message="Please enter adresse" />
                            <span asp-validation-for="Adresse" class="help-block text-danger"></span>
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="Email" class="sr-only control-label">You Email</label>
                            <input asp-for="Email" placeholder="You Email" required="" data-validation-required-message="Please enter email" class="form-control input-lg">
                            <span asp-validation-for="Email" class="help-block text-danger"></span>
                        </div>
                    </div>


                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="Tel" class="sr-only control-label">You Phone</label>
                            <input asp-for="Tel" placeholder="You Phone" required="" data-validation-required-message="Please enter phone number" class="form-control input-lg">
                            <span asp-validation-for="Tel" class="help-block text-danger"></span>
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="StartDate" class="sr-only control-label"></label>
                            <input asp-for="StartDate" class="form-control input-lg">
                            <span asp-validation-for="StartDate" class="help-block text-danger"></span>
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="EndDate" class="sr-only control-label"></label>
                            <input asp-for="EndDate" class="form-control input-lg">
                            <span asp-validation-for="EndDate" class="help-block text-danger"></span>
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label asp-for="CarId" class="sr-only control-label"></label>
                            <select asp-for="CarId" class="form-control input-lg" asp-items="ViewBag.CarId"></select>
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="form-group">
                            <label asp-for="DriverId" class="sr-only control-label"></label>
                            <select asp-for="DriverId" class="form-control input-lg" asp-items="ViewBag.DriverId"></select>
                        </div>
                    </div>



                   

                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-dark" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


<!-- Facts section-->
<section class="facts section-small bg-img">
    <div class="overlay"></div>
    <div class="container text-center">
        <div class="row">
            <div class="col-sm-3">
                <span data-min="0" data-max="24" data-delay="5" data-increment="1" class="numscroller">0</span>
                <h5 class="no-pad">Driver</h5>
            </div>
            <div class="col-sm-3">
                <span data-min="0" data-max="785" data-delay="5" data-increment="3" class="numscroller">0</span>
                <h5 class="no-pad">Happy Customers</h5>
            </div>
            <div class="col-sm-3">
                <span data-min="0" data-max="30" data-delay="5" data-increment="1" class="numscroller">0</span>
                <h5 class="no-pad">Car</h5>
            </div>
            <div class="col-sm-3">
                <span data-min="0" data-max="400" data-delay="5" data-increment="1" class="numscroller">0</span>
                <h5 class="no-pad">Reservation</h5>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
