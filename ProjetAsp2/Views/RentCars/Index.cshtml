@model IEnumerable<ProjetAsp2.Models.RentCar>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}


<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">


            <!-- Export Datatable start -->
            <div class="card-box mb-30">
                <div class="pd-20">
                    <h4 class="text-blue h4">List of Reservations</h4>
                   
                </div>

                <div class="pb-20">
                    <table class="table table-bordered multiple-select-row data-table-export nowrap">
                        <thead>


                            <tr>

                                <th>
                                    @Html.DisplayNameFor(model => model.FullName)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Adresse)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Tel)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.StartDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.EndDate)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Car)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.driver)
                                </th>
                                <th>Action</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>


                                    <td class="table-plus">
                                        @item.FullName
                                    </td>

                                    <td class="table-plus">
                                        @item.Adresse
                                    </td>
                                    <td class="table-plus">
                                        @item.Email
                                    </td>
                                    <td class="table-plus">
                                        @item.Tel
                                    </td>
                                    <td class="table-plus">
                                        @item.StartDate
                                    </td>

                                    <td class="table-plus">
                                        @item.EndDate
                                    </td>
                                    <td class="table-plus">
                                        @item.Car.Nom
                                    </td>
                                    <td class="table-plus">
                                        @item.driver.FullName
                                    </td>

                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>
                            }




                        </tbody>
                    </table>
                </div>
            </div>
            <!-- Export Datatable End -->
        </div>

    </div>
</div>






