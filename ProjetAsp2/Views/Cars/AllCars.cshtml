@model IEnumerable<ProjetAsp2.Models.Car>

@{
    ViewData["Title"] = "AllCars";
  

}

<header data-background="~/img/shop/header.jpg" class="intro introhalf">
    <!-- Intro Header-->
    <div class="intro-body">
        <h1>Car</h1>
        <h4>Our All Cars</h4>
    </div>
</header>
<!-- shop Block-->

<div id="shop" class="section section-small">

    <div class="container text-center">


         <div class="row grid-pad">
            @foreach (var car in Model)
            {
                <div class="col-sm-6 col-md-3">

                    <div class="shop-item">
                        <div class="badge price">@car.Prix DT</div>
                        <div class="badge price"></div>


                        <a asp-action="Details" asp-route-id="@car.Id">
                            <img src="~/images/@car.CarPicture" alt="" class="img-responsive center-block">
                        </a>
                    </div>
                    <a asp-action="Details" asp-route-id="@car.Id">
                        <h5>   @car.Nom</h5>
                    </a>
                </div>
            }



        </div>


    </div>

</div>

<!-- Pagination-->
<div class="section section-small bg-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <nav>
                    <ul class="pagination">
                        <li><a href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a></li>
                        <li class="active"><a href="#">1<span class="sr-only">(current)</span></a></li>
                        <li><a href="#">2</a></li>
