@model ProjetAsp2.ViewModels.CarViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}



<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
          

            <!-- horizontal Basic Forms Start -->
            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <div class="pull-left">
                        <h4 class="text-blue h4">Add New Car</h4>
                    </div>
                    <div class="pull-right">
                        <a asp-action="Index" class="btn btn-primary btn-sm scroll-click"> Back to List</a>
                    </div>
                </div>
                <form enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                    <div class="form-group">
                        <label asp-for="Nom" class="control-label"></label>
                        <input asp-for="Nom" class="form-control" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Matricule" class="control-label"></label>
                        <input asp-for="Matricule" class="form-control" />
                        <span asp-validation-for="Matricule" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Transmission" class="control-label"></label>
                        <input asp-for="Transmission" class="form-control" />
                        <span asp-validation-for="Transmission" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Carburant" class="control-label"></label>
                        <input asp-for="Carburant" class="form-control" />
                        <span asp-validation-for="Carburant" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="NbSiege" class="control-label"></label>
                        <input asp-for="NbSiege" class="form-control" />
                        <span asp-validation-for="NbSiege" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Prix" class="control-label"></label>
                        <input asp-for="Prix" class="form-control" />
                        <span asp-validation-for="Prix" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>



                    <div class="form-group">
                        <label asp-for="CarPicture" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="CarPicture" class="custom-file-input" id="customFile">
                            <label class="custom-file-label" for="customFile">Choose file</label>
                        </div>
                        <span asp-validation-for="CarPicture" class="text-danger"></span>
                    </div>





                   


                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>


                </form>

            </div>
            <!-- horizontal Basic Forms End -->


        </div>

    </div>
</div>






@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
}
